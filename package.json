{
  "name": "josephfh-portfolio-react",
  "description": "A website for Joseph Hughes",
  "author": "Joseph Hughes",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.5.5",
    "express": "^4.17.1",
    "i18next": "^19.0.0",
    "ignore-styles": "^5.0.1",
    "material-design-icons-svg": "^3.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-i18next": "^11.2.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.1.1",
    "react-transition-group": "^4.3.0",
    "svg-inline-react": "^3.2.0"
  },
  "scripts": {
    "start": "npm-run-all -p start:css start:js",
    "build": "npm-run-all build:css build:js build:after",
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "start:css": "postcss src/css/app.src.css -o src/app.css -w",
    "build:css": "postcss src/css/app.src.css -o src/app.css --env production",
    "build:after": "node ./scripts/after-build.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "printWidth": 90,
    "bracketSpacing": false,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(js|jsx)": [
      "eslint --fix",
      "git add"
    ],
    "*.+(json|css|md)": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "purgecss": "^1.4.1",
    "tailwindcss": "^1.1.3"
  }
}
